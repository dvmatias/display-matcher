<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true">

    <!-- SIMPLE -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/simpleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_custom_device_info_entry_view_simple_bgr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textViewSimpleInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/cereal_book"
            android:textColor="@color/text_description"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/textViewSimpleLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Simple Device Info" />

        <TextView
            android:id="@+id/textViewSimpleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cereal_medium"
            android:textColor="@color/main_600"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Simple Device Label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- BOOLEAN -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/booleanContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simpleContainer"
        android:visibility="gone"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <TextView
            android:id="@+id/textViewBooleanInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fontFamily="@font/cereal_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/textViewBooleanLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Simple Device Info" />

        <TextView
            android:id="@+id/textViewBooleanLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cereal_medium"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Simple Device Label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>