<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cmdv.displaymatcher">

    <application
        android:name=".DisplayMatcherApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DisplayMatcher"
        tools:ignore="AllowBackup">

        <activity
            android:name="com.cmdv.feature.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.LightStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.cmdv.feature.ui.DeviceDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar.LightStatusBar" />
        <activity android:name="com.cmdv.feature.ui.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar.LightStatusBar" />
    </application>

</manifest>