<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/textViewFilterReleaseStatus"
        style="@style/FilterLabel.Pill"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/shape_filter_selector_background_none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="All" />

    <TextView
        android:id="@+id/textViewFilterCategories"
        style="@style/FilterLabel.Pill"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/shape_filter_selector_background_none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewFilterReleaseStatus"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Filters" />

</androidx.constraintlayout.widget.ConstraintLayout>